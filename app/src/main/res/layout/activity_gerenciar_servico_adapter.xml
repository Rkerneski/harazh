<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
    android:descendantFocusability="beforeDescendants">

    <LinearLayout
        android:layout_width="412dp"
        android:layout_height="160dp"
        android:background="@drawable/card_background"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="43dp"
            android:layout_height="match_parent"
            android:background="@drawable/card_background"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/txt_id"
                android:layout_width="28dp"
                android:layout_height="wrap_content"
                android:text="Text line 1"
                android:visibility="invisible" />

            <EditText
                android:id="@+id/txt_id_carro"
                android:layout_width="28dp"
                android:layout_height="21dp"
                android:text="Text line 1"
                android:visibility="invisible" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="56dp"
            android:layout_height="match_parent"
            android:background="@drawable/card_background"
            android:orientation="vertical">


            <ImageButton
                android:id="@+id/btn_Excluir"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="32dp"
                android:layout_height="29dp"
                android:layout_alignBottom="@+id/btn_Editar"
                android:layout_marginTop="18dp"
                android:layout_marginEnd="80dp"
                android:layout_marginRight="112dp"
                android:background="@drawable/excluir"
                android:text="Excluir"
                android:textAllCaps="false"
                android:textColor="#ffffff"
                android:textStyle="bold" />

            <ImageButton
                android:id="@+id/btn_Editar"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="32dp"
                android:layout_height="29dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="19dp"
                android:background="@drawable/editar"
                android:padding="5dp"
                android:textAllCaps="false"
                android:textColor="#ffffff"
                android:textSize="18sp"
                android:textStyle="bold" />

            <ImageButton
                android:id="@+id/btn_descricao"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="32dp"
                android:layout_height="29dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="19dp"
                android:background="@drawable/iconedesc"
                android:padding="5dp"
                android:textAllCaps="false"
                android:textColor="#ffffff"
                android:textSize="18sp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="326dp"
            android:layout_height="match_parent"
            android:background="@drawable/card_background"
            android:descendantFocusability="afterDescendants"
            android:orientation="vertical"
            android:paddingLeft="15dp"
            android:paddingTop="15dp"
            android:paddingRight="15dp"
            android:paddingBottom="15dp">

            <TextView
                android:id="@+id/txt_data"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="0dp"
                android:paddingTop="25dp"
                android:text="Text line 2"
                android:textColor="#ffffff"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txt_titulo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="0dp"
                android:text="Text line 3"
                android:textColor="#ffffff"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txt_valor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="0dp"
                android:text="Text line 4"
                android:textColor="#ffffff"
                android:textSize="18sp"
                android:textStyle="bold" />


        </LinearLayout>

    </LinearLayout>

</FrameLayout>